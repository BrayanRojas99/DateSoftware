<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DateSoftware.Views.DoctorsPage"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Doctors Information"
                   FontSize="40"
                   HorizontalTextAlignment="Center"
                   Margin="0,30,0,0"/>
            <ListView></ListView>
            <Button x:Name="BtnAddDoctor" Text="ADD DOCTOR" Margin="5,5,5,5" BackgroundColor="Green" Clicked="BtnAddDoctor_Clicked"/>
            <Button x:Name="BtnBack" Text="BACK" Margin="5,5,5,5" Clicked="BtnBack_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>